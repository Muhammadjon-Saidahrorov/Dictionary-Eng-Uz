<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/bg_search"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/uzbek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1B2545"
        android:textSize="26sp"
        android:text="abandon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/favourite"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:src="@drawable/ic_bookmark"
        app:tint="#1B2545"
        app:layout_constraintBottom_toBottomOf="@id/uzbek"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/uzbek" />

    <TextView
        android:id="@+id/transcript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#636363"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/type"
        android:text=""
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/uzbek"
        app:layout_constraintStart_toStartOf="@id/uzbek"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:text="verb"
        app:layout_constraintBottom_toTopOf="@id/countable"
        android:layout_marginTop="24dp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/transcript"
        app:layout_constraintStart_toStartOf="@id/uzbek"
        />

    <TextView
        android:id="@+id/countable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1B2545"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/english"
        android:text="[ T ]"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/type"
        app:layout_constraintStart_toStartOf="@id/uzbek"
        />

    <TextView
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4F00BD"
        android:textSize="26sp"
        android:text="tark qilmoq"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countable"
        app:layout_constraintStart_toStartOf="@id/uzbek"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


